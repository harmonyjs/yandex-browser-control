{
  "name": "@avavilov/yandex-browser-control",
  "description": "Control Yandex browser tabs, windows, and navigation",
  "keywords": [
    "yandex",
    "browser",
    "automation",
    "mcp"
  ],
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint --fix .",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack": "node ./scripts/pack.mjs",
    "version:up": "node ./scripts/version-up.mjs minor",
    "version:patch": "node ./scripts/version-up.mjs patch",
    "version:minor": "node ./scripts/version-up.mjs minor",
    "version:major": "node ./scripts/version-up.mjs major",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build",
    "prepare": "npm run build",
    "preversion": "npm run lint && npm run typecheck",
    "postversion": "git push && git push --tags",
    "release:patch": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "author": "Andrey Vavilov <a@vavilov.dev>",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harmonyjs/yandex-browser-control.git"
  },
  "bugs": {
    "url": "https://github.com/harmonyjs/yandex-browser-control/issues"
  },
  "homepage": "https://github.com/harmonyjs/yandex-browser-control#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "9.34.0",
    "@types/node": "24.3.0",
    "eslint": "9.34.0",
    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-unicorn": "60.0.0",
    "globals": "16.3.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.4",
    "@avavilov/apple-script": "0.0.3",
    "pino": "9.9.0",
    "zod": "4.1.5"
  }
}
